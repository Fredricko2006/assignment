class FoodRatings {
    unordered_map<string, string> cuisineOf;
    unordered_map<string, int> ratingOf;
    unordered_map<string, set<pair<int,string>>> bestFood;
public:
    FoodRatings(vector<string>& foods, vector<string>& cuisines, vector<int>& ratings) {
        for (int i = 0; i < foods.size(); i++) {
            cuisineOf[foods[i]] = cuisines[i];
            ratingOf[foods[i]] = ratings[i];
            bestFood[cuisines[i]].insert({-ratings[i], foods[i]});
        }
    }
    void changeRating(string food, int newRating) {
        string c = cuisineOf[food];
        bestFood[c].erase({-ratingOf[food], food});
        ratingOf[food] = newRating;
        bestFood[c].insert({-newRating, food});
    }
    string highestRated(string cuisine) {
        return bestFood[cuisine].begin()->second;
    }
};
